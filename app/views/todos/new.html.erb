<div class="parent-container-large">
    <div class="frame-top-large">
            <%= link_to "Back To Home", root_path, class: "frame-label" %>
            <div class="wrap"> <%= button_to 'Sign out', sign_out_path, class: "button3", method: :delete %> </div>
    </div>
    <div id="clearance" class="frame-main-large">
        <p style="font-size: 18px; font-weigth: 600; padding-left: 15px; padding-top: 20px;">Create new task</p>
        <hr class="hr2">

        <% if @errors.present? %>
        <div class = "errors">
            <ul>
                <% @errors.each do |error| %>
                    <li> <%= error %> </li>
                <% end %>
            </ul>
        </div>
        <% end %>
        <%= form_for @todo do |form| %>
            <div class="form-group">
                <%= form.text_field :name, class: "textfield2", placeholder:"Task Subject" %>
            </div>
            <div class="form-group">
                <%= form.text_area :description, class: "textarea2", rows: 10, placeholder: "Task Description" %>
            </div>
            <div class="actions">
                <%= form.submit "Create New Task", class:"button5" %>
            </div>
        <% end %>
    </div>
</div>
